<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to DailyScroll</title>
    <!-- links start here -->
    <!-- Output Css Link -->
    <link rel="stylesheet" href="/Style/output.css">
     <!--Favicon link  -->
    <link rel="shortcut icon" href="/Images/favicon-16x16.png" type="image/png">
    <!-- Font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
     integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     <!-- Google fonts link -->
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Arima:wght@100..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- links ends here -->

    <style>
      body{
        font-family: "Poppins", serif;
      }
    </style>
</head>
<body class="bg-[#ecf0f1]">

    <%-include("../Partials/header") %>
    <div class="w-[100%] lg:w-[93%]  text-black  mx-auto px-4 py-8">

      <!-- Hero Section -->
      <div class="flex flex-wrap  mx-4">
        <!-- Left Section -->
        <div class="w-full lg:w-2/3 px-4">
          <div class="h-full bg-white rounded-lg shadow-md overflow-hidden">
            <img src="<%= blogs[0].Image %>" alt="<%= blogs[0].title %>" class="w-full h-64 object-cover">
            <div class="p-6">
              <h2 class="text-2xl font-bold text-gray-800 mb-4">
                <%= blogs[0].Title %>
              </h2>
              <p class="text-gray-600 mb-4">
                <%= blogs[0].Content %>...
              </p>
              <a href="/View/<%= blogs[0].id %>" class="inline-block px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">
                Read More
              </a>
            </div>
          </div>
        </div>
    
        <!-- Right Section -->
        <div class="w-full lg:w-1/3 px-4">
          <!-- Top Blog -->
          <div class="mb-4 bg-white rounded-lg shadow-md overflow-hidden mt-5 lg:mt-0">
            <img src="<%= blogs[1].Image %>" alt="<%= blogs[1].Title %>" class="w-full h-32 object-cover">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">
                <%= blogs[1].Title %>
              </h3>
              <a href="/View/<%= blogs[1].id %>" class="text-blue-500 hover:underline">
                Read More
              </a>
            </div>
          </div>
    
          <!-- Bottom Blog -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden mt-5 ">
            <img src="<%= blogs[2].Image %>" alt="<%= blogs[2].Title %>" class="w-full h-32 object-cover">
            <div class="p-4">
              <h3 class="text-lg font-semibold text-gray-800 mb-2">
                <%= blogs[2].Title %>
              </h3>
              <a href="/View/<%= blogs[2].id %>" class="text-blue-500 hover:underline">
                Read More
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
     <!-- Blogs -->
   <section>
     <!-- Container -->
    <div class="container mx-auto w-[95%] lg:w-[93%] flex lg:flex-row flex-col gap-6">
    
    <!-- Left -->
    <div class="w-[100%] mt-5 lg:w-[65.6%] mx-auto h-fit px-[15px] mb-5  bg-white">
      
      <!-- Blogs -->
      <div class="w-[100%] mb-5 mt-3">
        <!-- Latest Banner -->
        <div class="mx-auto mt-5 mb-5">
          <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Latest News</h2>
        </div>
        
        <% if (Posts.length === 0) { %>
          <img src="/Images/no-post.jpeg" alt="" width="100%">
        <% } %>
        <!-- Banner ends -->

        <!-- Posts array -->


        <!-- Posts Loop -->
        <% Posts.slice(3).forEach(Post => { %>
          <!-- Post Container -->
          <div class="w-full overflow-hidden lg:h-[200px] flex flex-col h-auto lg:flex-row gap-5 items-start sm:items-center p-4">
            
            <!-- Post Image -->
            <div class="w-full lg:w-[40%] w-100 mb-4 sm:mb-0">
              <img class="w-full h-auto" src="<%= Post.Image %>" alt="Post Image">
              <!-- Label -->
              <ul class="relative -mt-10 ml-2 sm:ml-3">
                <li class="w-[100px] text-white bg-red-500 flex justify-center items-center py-1">
                  <%= Post.Catogorie %>
                </li>
              </ul>
            </div>

            <!-- Post Text -->
            <div class="w-full w-100 lg:w-[60%] flex flex-col">
              <!-- Title -->
              <div>
                <h2 class="text-[#222222] text-[19px] mb-3 font-bold tracking-wide leading-6 hover:text-red-500">
                  <a href="/View/<%= Post.id %>"><%= Post.Title %></a>
                </h2>
              </div>
              <!-- Content -->
              <div>
                <p class="text-[14px] text-[#777777] tracking-wide leading-6 font-light">
                  <%= Post.Content && Post.Content.slice(0, 80) %>
                </p>
              </div>
              <!-- Buttons -->
              <ul class="flex gap-3 mt-2">
                <li class="text-[#007bff]">
                  <a href="/edit/<%= Post.id %>">
                    <i class="fa-solid fa-pen-to-square mr-1"></i>Edit
                  </a>
                </li>
                <li class="text-[#dc3545]">
                  <form action="/delete/<%= Post.id %>" method="post">
                    <button type="submit">
                      <i class="fa-solid fa-trash mr-1"></i>Delete
                    </button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <aside class="w-full lg:w-[33%] mt-5 px-5 py-5 bg-white text-[#04091e]">
      <!-- Editor's Picks -->
      <section>
          <div class="mx-auto mt-5 mb-5">
              <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Editor Picks</h2>
          </div>
          <div>
              <!-- Highlighted Post -->
              <article>
                  <img class="w-full h-auto" src="/Images/P1.avif" alt="Editor's Pick">
                  <h3 class="text-[#222222] text-[19px] mt-3 mb-3 font-bold leading-6 hover:text-red-500">
                      How to Stay Safe While Traveling Alone
                  </h3>
                  <p>Learn essential tips for safe and confident solo traveling...</p>
                  <hr class="mt-3">
              </article>

              <!-- Mini Posts -->
              <% const editorPosts = [
                  { image: "/Images/P2.jpeg", title: "Guide 1", content: "Lorem, ipsum dolor sit amet consectetur." },
                  { image: "/Images/p3.avif", title: "Guide 2", content: "Lorem, ipsum dolor sit amet consectetur." },
                  { image: "/Images/p4.avif", title: "Guide 3", content: "Lorem, ipsum dolor sit amet consectetur." }
              ]; %>
              <% editorPosts.forEach(post => { %>
              <div class="flex flex-col w-[100%] lg:flex-row mt-5 my-2">
                  <div class="w-100 lg:w-[40%]">
                      <img class="w-full h-auto" src="<%= post.image %>" alt="<%= post.title %>">
                  </div>
                  <div class="w-100 mx-3 lg:w-[60%] mt-3 lg:mt-0">
                      <h3 class="text-[#222222] text-[15px] font-bold hover:text-red-500"><%= post.title %></h3>
                      <p class="text-xs"><%= post.content %></p>
                  </div>
              </div>
              <% }); %>
          </div>
      </section>

      <!-- Latest News -->
      <section>
          <div class="mx-auto mt-5 mb-5">
              <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Popular News</h2>
          </div>
          <% Posts.slice(0, 5).forEach(post => { %>
          <div class="flex flex-col lg:flex-row gap-3 my-3">
              <div class="w-100 lg:w-[40%]">
                  <img class="w-full h-auto" src="<%= post.Image %>" alt="<%= post.Title %>">
              </div>
              <div class="w-100 lg:w-[60%]">
                  <h3 class="text-[#222222] text-[15px] font-bold hover:text-red-500">
                      <a href="/View/<%= post.id %>"><%= post.Title %></a>
                  </h3>
                  <p class="block lg:hidden"><%= post.Content && post.Content.slice(0,90) %>...</p>
              </div>
          </div>
          <% }); %>
      </section>

      <!-- Social Networks -->
      <section>
          <div class="mx-auto mt-5 mb-5">
              <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Social Networks</h2>
          </div>
          <div class="flex flex-col gap-4">
              <a href="#" class="bg-purple-700 text-white py-2 px-3 flex items-center justify-between">
                  <i class="fa-brands fa-facebook-f bg-white text-purple-700 p-2"></i> Like Our Page
              </a>
              <a href="#" class="bg-slate-500 text-white py-2 px-3 flex items-center justify-between">
                  <i class="fa-brands fa-twitter bg-white text-slate-500 p-2"></i> Follow Us
              </a>
          </div>
      </section>
  </aside>
  </div>
</section>

        
       
    
    <%- include("../Partials/footer") %>

    <script src="/Function/index.js"></script>
    
</body>
</html>