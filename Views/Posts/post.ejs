<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Details | DailyScroll</title>
     <!-- links start here -->
    <!-- Output Css Link -->
    <link rel="stylesheet" href="/Style/output.css">
     <!--Favicon link  -->
    <link rel="shortcut icon" href="/Images/favicon-16x16.png" type="image/png">
    <!-- Font awesome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
     integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
     <!-- Google fonts link -->
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Arima:wght@100..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- links ends here -->

    <style>
        body {
            font-family: "Poppins", sans-serif;
        }
    </style>
</head>
<body class="bg-[#ecf0f1]">
    <!-- Header -->
    <%- include('../Partials/header') %>

    <!-- Main Content -->
    <article>
        <!-- Title Banner -->
         <!-- Banner -->
        <div class="bg-red-500 text-white flex flex-col items-center justify-center mt-5 w-[87%] h-[250px] mx-auto ">
        <h2 class="text-[2.5rem]"><%= Post.Catogorie %> Blog</h2>
        <ul class="flex text-sm gap-5 mt-3 font-normal">
            <li>Home</li>
            <li><i class="fa-solid fa-arrow-right"></i></li>
            <li>Post</li>
        </ul>
        </div>
        <!-- Tips Section -->
        <section class="bg-white text-[#04091e] font-medium w-[90%] px-5 py-2 mx-auto mt-5 h-[40px] md:w-[87%]">
            <h3 class="text-[1rem]">
                <span class="text-red-600 font-medium mx-2">Tips:</span>Start Blogging With DailyScroll
            </h3>
        </section>

        <!-- Main and Sidebar -->
        <div class="container flex flex-col lg:flex-row justify-center gap-5 w-[90%] mx-auto mt-10 md:w-[87%]">
            <!-- Main Blog Content -->
            <div class="bg-white w-full lg:w-[75%] p-6 md:p-[30px]">
                <img src="<%= Post.Image || '/Images/placeholder.jpg' %>" alt="<%= Post.Title || 'Blog Image' %>" class="w-full h-auto">
                <div class="px-3 md:px-5">
                    <div class="text-white flex items-center justify-center font-medium tracking-wide px-4 bg-red-500 w-20 h-8 mb-3 mt-5">
                        <%= Post.Catogorie || 'Uncategorized' %>
                    </div>
                    <h2 class="text-[#222222] font-[600] leading-[1.2em] text-[24px]"><%= Post.Title || 'Untitled Blog Post' %></h2>
                    <p class="content text-[#777777] text-[14px] font-normal leading-[1.625em] mb-[1em] tracking-wide mt-5">
                        <%= Post.Content || 'Content coming soon...' %>
                    </p>
                    
                </div>
            </div>

            <!-- Sidebar -->
            <aside class="w-full lg:w-[33%] px-5 bg-white text-[#04091e]">
                <!-- Editor's Picks -->
                <section>
                    <div class="mx-auto mt-5 mb-5">
                        <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Editor Picks</h2>
                    </div>
                    <div>
                        <!-- Highlighted Post -->
                        <article>
                            <img class="w-full h-auto" src="/Images/P1.avif" alt="Editor's Pick">
                            <h3 class="text-[#222222] text-[19px] mt-3 mb-3 font-bold leading-6 hover:text-red-500">
                                How to Stay Safe While Traveling Alone
                            </h3>
                            <p>Learn essential tips for safe and confident solo traveling...</p>
                            <hr class="mt-3">
                        </article>

                        <!-- Mini Posts -->
                        <% const editorPosts = [
                            { image: "/Images/P2.jpeg", title: "Guide 1", content: "Lorem, ipsum dolor sit amet consectetur." },
                            { image: "/Images/p3.avif", title: "Guide 2", content: "Lorem, ipsum dolor sit amet consectetur." },
                            { image: "/Images/p4.avif", title: "Guide 3", content: "Lorem, ipsum dolor sit amet consectetur." }
                        ]; %>
                        <% editorPosts.forEach(post => { %>
                        <div class="flex flex-col w-[100%] lg:flex-row mt-5 my-2">
                            <div class="w-[40%]">
                                <img class="w-full h-auto" src="<%= post.image %>" alt="<%= post.title %>">
                            </div>
                            <div class="w-[60%] mx-3">
                                <h3 class="text-[#222222] text-[15px] font-bold hover:text-red-500"><%= post.title %></h3>
                                <p class="text-xs"><%= post.content %></p>
                            </div>
                        </div>
                        <% }); %>
                        
                    </div>
                </section>

                <!-- Latest News -->
                <section>
                    <div class="mx-auto mt-5 mb-5">
                        <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Popular News</h2>
                    </div>
                    <% Posts.slice(0, 5).forEach(post => { %>
                    <div class="flex flex-col lg:flex-row gap-3 my-3">
                        <div class="w-100 lg:w-[40%]">
                            <img class="w-full h-auto" src="<%= post.Image %>" alt="<%= post.Title %>">
                        </div>
                        <div class="w-100 lg:w-[60%]">
                            <h3 class="text-[#222222] text-[15px] font-bold hover:text-red-500">
                                <a href="/View/<%= post.id %>"><%= post.Title %></a>
                            </h3>
                        </div>
                    </div>
                    <% }); %>
                </section>

                <!-- Social Networks -->
                <section>
                    <div class="mx-auto mt-5 mb-5">
                        <h2 class="text-white font-medium tracking-wide bg-[#04091e] py-[7px] px-[20px]">Social Networks</h2>
                    </div>
                    <div class="flex flex-col gap-4">
                        <a href="#" class="bg-purple-700 text-white py-2 px-3 flex items-center justify-between">
                            <i class="fa-brands fa-facebook-f bg-white text-purple-700 p-2"></i> Like Our Page
                        </a>
                        <a href="#" class="bg-slate-500 text-white py-2 px-3 flex items-center justify-between">
                            <i class="fa-brands fa-twitter bg-white text-slate-500 p-2"></i> Follow Us
                        </a>
                    </div>
                </section>
            </aside>
        </div>
    </article>

    <!-- Footer -->
    <%- include('../Partials/footer') %>
</body>
</html>
